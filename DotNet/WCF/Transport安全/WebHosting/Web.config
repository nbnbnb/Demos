<configuration>
  <system.serviceModel>
    <services>
      <service name="CalculatorService">
        <endpoint binding="ws2007HttpBinding" 
                  contract="CalculatorContract" 
                  bindingConfiguration="transportWS2007HttpBinding"/>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpGetUrl="mex"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true">
      <serviceActivations>
        <add relativeAddress="CalculatorService.svc" service="Service.CalculatorService,Service"/>
      </serviceActivations>
    </serviceHostingEnvironment>
    <bindings>
      <ws2007HttpBinding>
        <binding name="transportWS2007HttpBinding">
          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
        </binding>
      </ws2007HttpBinding>
    </bindings>
  </system.serviceModel>
</configuration>